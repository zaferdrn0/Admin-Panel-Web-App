@model List<Kullanici>

<div class="card">
    <div class="card-header">
        <table style="width:100%;">
            <tr>
                <td>  <h3 class="card-title">Kullanıcılar</h3>  </td>
                <td style="text-align:right;">
                    <a href="/Kullanici/Ekle" class="btn btn-sm btn-success">
                        Kullanıcı Ekle
                    </a>

                </td>
            </tr>
        </table>
        
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th style="width: 50px">#</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Eposta</th>
                    <th style="width: 120px">İşlemler</th>
                </tr>
            </thead>
            <tbody>

                @foreach (Kullanici k in Model)
                {
                    <tr>
                        <td>
                            <img src="~/Content/images/kullanici/@k.resim" style="width:50px;" />
                        </td>
                        <td>@k.ad</td>
                        <td>@k.soyad</td>
                        <td>@k.ePosta</td>
                        <td>
                            <a href="/Kullanici/Duzenle/@k.kullaniciID" class="btn btn-sm btn-info" title="Düzenle">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="/Kullanici/Sil/@k.kullaniciID" class="btn btn-danger btn-sm" title="Sil" onclick="return confirm('Silmek istediğinizden emin misiniz ?')">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>