v class="card card-success">
<div class="card-header">
    <h3 class="card-title">Hizmet Ekle</h3>
</div>
<!-- /.card-header -->
<!-- form start -->
@using (Html.BeginForm())
{
    <div class="card-body">

        <div class="form-group">
            <label for="exampleInputEmail1">Hizmet</label>
            <input type="text" class="form-control" name="ad" id="ad" placeholder="Hizmet">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Aciklama</label>
            <input type="text" class="form-control" name="aciklama" id="aciklama" placeholder="Aciklama">
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="aktifMi" name="aktifMi" checked>
            <label class="form-check-label" for="exampleCheck1">Aktif Mi?</label>
        </div>


    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-success">Kaydet</button>
    </div>
}
