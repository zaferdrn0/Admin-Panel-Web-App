@model List<Mesaj>

<div class="card">
    <div class="card-header">
        <table style="width:100%;">
            <tr>
                <td>  <h3 class="card-title">Kullanıcılar</h3>  </td>
                <td style="text-align:right;">
                    <a href="/Iletisim/Gonder" class="btn btn-sm btn-success">
                        Mesaj Ekle
                    </a>

                </td>
            </tr>
        </table>

    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th style="width: 50px">#</th>
                    <th>Ad</th>
                    <th>Eposta</th>
                    <th>Konu</th>
                    <th>Mesaj</th>
                    <th style="width: 120px">İşlemler</th>
                </tr>
            </thead>
            <tbody>

                @foreach (Mesaj m in Model)
                {
                    <tr>
                        <td>
                            <
                        </td>
                        <td>@m.ad</td>
                        <td>@m.eposta</td>
                        <td>@m.konu</td>
                        <td>@m.icerik<td>
                            
                            <a href="/Iletisim/Sil/@m.mesajID" class="btn btn-danger btn-sm" title="Sil" onclick="return confirm('Silmek istediğinizden emin misiniz ?')">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>