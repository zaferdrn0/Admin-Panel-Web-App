<div class="card card-success">
    <div class="card-header">
        <h3 class="card-title">Urun Ekle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    @using (Html.BeginForm())
    {
        <div class="card-body">

            <div class="form-group">
                <label for="exampleInputEmail1">Adı</label>
                <input type="text" class="form-control" name="ad" id="ad" placeholder="İsim">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Özet</label>
                <input type="text" class="form-control" name="ozet" id="ozet" placeholder="Ozet">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Detaylar</label>
                <input type="text" class="form-control" name="detay" id="detay" placeholder="Detaylar">
            </div>

            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="aktifMi" name="aktifMi" checked>
                <label class="form-check-label" for="exampleCheck1">Aktif Mi?</label>
            </div>

        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    }
</div>